<p id="notice"><%= notice %></p>

<div class="container">
	<div class="page-header">
		<h1>Lista de Curr√≠culos</h1>
	</div>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>Codigo</th>
				<th>Curso</th>
				<th>Disciplina</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @curriculos.each do |curriculo| %>
				<tr>
					<td><%= curriculo.codigo %></td>
					<td><%= curriculo.curso.nome %></td>
					<td><%= curriculo.disciplina.nome %></td>
					<td><%= link_to 'Detalhes', curriculo %></td>
					<td><%= link_to 'Editar', edit_curriculo_path(curriculo) %></td>
					<td><%= link_to 'Excluir', curriculo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to 'Novo Curriculo', new_curriculo_path %>
</div>
