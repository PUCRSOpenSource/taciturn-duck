<p id="notice"><%= notice %></p>

<h1>Turmas</h1>

<table class='pure-table'>
  <thead>
    <tr>
      <th>Horario</th>
      <th>Numero</th>
      <th>Disciplina</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turmas.each do |turma, index| %>
		<tr class="<%= 'pure-table-odd' if turma.id.even? %>">
        <td><%= turma.horario %></td>
        <td><%= turma.numero %></td>
        <td><%= turma.disciplina.nome %></td>
        <td><%= link_to 'Ver', turma %></td>
        <td><%= link_to 'Editar', edit_turma_path(turma) %></td>
        <td><%= link_to 'Apagar', turma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Turma', new_turma_path, class:"pure-button"%>
