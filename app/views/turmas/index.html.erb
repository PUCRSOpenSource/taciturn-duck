<p id="notice"><%= notice %></p>

<div class="container">
	<div class="page-header">
		<h1>Lista de Turmas</h1>
	</div>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Horario</th>
				<th>Numero</th>
				<th>Disciplina</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @turmas.each do |turma| %>
				<tr>
					<td><%= turma.horario %></td>
					<td><%= turma.numero %></td>
					<td><%= turma.disciplina.try(:nome) %></td>
					<td><%= link_to 'Detalhes', turma %></td>
					<td><%= link_to 'Editar', edit_turma_path(turma) %></td>
					<td><%= link_to 'Excluir', turma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<br>
	<%= link_to 'Nova Turma', new_turma_path, class: 'btn btn-primary' %>
</div>
